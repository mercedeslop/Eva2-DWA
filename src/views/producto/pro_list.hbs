<div class="container" style="margin-top:70px;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Productos</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger">
                <a class="nav-link link-light" aria-current="page" href="/pro_add"> Nuevos Productos</a>
            </button>
        </div>

        {{#if producto.length}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Año de Lanzamiento</th>
                    <th scope="col">Artista</th>
                    <th scope="col">Género (ID)</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each producto}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombre}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{precio}}</td>
                    <td>{{año_lanzamiento}}</td>
                    <td>{{artista}}</td>
                    <td>{{genero}}</td>
                    <td>{{stock}}</td>
                    <td>{{estado}}</td>
                    <td>
                        <div>
                            <a href="/pro_edit/{{id}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i> Actualizar
                            </a>
                            <a href="/pro_delete/{{id}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="10">REGISTRO DE PRODUCTOS</td>
                </tr>
            </tfoot>
        </table>
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>No hay productos disponibles</h3>
            </div>
            <div class="card-body">
                <p>Presiona este botón para agregar un nuevo producto a la tienda.</p>
                <a href="/pro_add" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>
