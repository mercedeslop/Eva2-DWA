<div class="container" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="text-center text-uppercase p-2">Editar Producto</h3>
            <form action="/pro_update/{{producto.id}}" method="POST">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{producto.nombre}}" required>
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="3" required>{{producto.descripcion}}</textarea>
                </div>
                <div class="mb-3">
                    <label for="precio" class="form-label">Precio</label>
                    <input type="number" step="0.01" class="form-control" id="precio" name="precio" value="{{producto.precio}}" required>
                </div>
                <div class="mb-3">
                    <label for="año_lanzamiento" class="form-label">Año de Lanzamiento</label>
                    <input type="number" class="form-control" id="año_lanzamiento" name="año_lanzamiento" value="{{producto.año_lanzamiento}}" required>
                </div>
                <div class="mb-3">
                    <label for="artista" class="form-label">Artista</label>
                    <input type="text" class="form-control" id="artista" name="artista" value="{{producto.artista}}" required>
                </div>
                <div class="mb-3">
                    <label for="id_genero" class="form-label">Género</label>
                    <select class="form-control" id="id_genero" name="id_genero" required>
                        {{#each generos}}
                        <option value="{{id}}" {{#ifCond id ../producto.id_genero}}selected{{/ifCond}}>{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" class="form-control" id="stock" name="stock" value="{{producto.stock}}" required>
                </div>
                <div class="mb-3">
                    <label for="estado" class="form-label">Estado</label>
                    <select class="form-control" id="estado" name="estado" required>
                        <option value="disponible" {{#ifCond producto.estado "disponible"}}selected{{/ifCond}}>Disponible</option>
                        <option value="no disponible" {{#ifCond producto.estado "no disponible"}}selected{{/ifCond}}>No Disponible</option>
                    </select>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Guardar Cambios</button>
                    <a href="/pro_list" class="btn btn-secondary mt-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
